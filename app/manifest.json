{
  "manifest_version": 2,
  "name": "Webtrakt",
  "description": "Extension for various websites for trakt.",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "tabs",
    "identity",
    "storage",
    "cookies",
    "*://*.crunchyroll.com/*"
  ],
  "page_action": {
    "default_icon": "images/icons/valid-site.svg",
    "default_popup": "dist/index.html"
  },
  "background": {
    "scripts": [
      "dist/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.crunchyroll.com/*"
      ],
      "js": [
        "dist/content.js"
      ]
    }
  ]
}